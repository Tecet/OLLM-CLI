{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "baseUrl": "../../",
    "paths": {
      "@ollm/core": ["packages/core/src/index.ts"],
      "@ollm/core/*": ["packages/core/src/*"],
      "@ollm/ollm-cli-core": ["packages/core/src/index.ts"],
      "@ollm/ollm-cli-core/*": ["packages/core/src/*"]
    },
    "noEmitOnError": false
  },
  "include": ["src", "../../types/**/*.d.ts"],
  "exclude": [
    "src/**/__tests__",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/__tests__/**",
    "src/**/__mocks__/**"
  ]
}