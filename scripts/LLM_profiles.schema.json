{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "LLM Profiles",
  "type": "object",
  "required": ["models"],
  "properties": {
    "models": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name"],
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "context_profiles": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "size": { "type": "integer" },
                "vram_estimate": { "type": ["string", "null"] },
                "vram_estimate_gb": { "type": ["number", "null"] }
              }
            }
          }
        },
        "additionalProperties": true
      }
    }
  }
}
