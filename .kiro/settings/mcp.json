{
  "mcpServers": {
    "context7": {
      "command": "npx",
      "args": [
        "-y",
        "@upstash/context7-mcp"
      ],
      "env": {
        "CONTEXT7_API_KEY": "your-api-key-here"
      },
      "transport": "stdio",
      "disabled": false,
      "autoApprove": [],
      "disabledTools": [
        "resolve-library-id",
        "query-docs"
      ]
    },
    "brave-search": {
      "command": "npx",
      "args": [
        "-y",
        "@smithery/brave-search-mcp"
      ],
      "env": {
        "SMITHERY_API_KEY": "your-smithery-api-key-here",
        "BRAVE_API_KEY": "your-brave-api-key-here"
      },
      "transport": "stdio",
      "disabled": true,
      "autoApprove": []
    }
  }
}